          // Ensure the clothesGroup radio buttons are mutually exclusive
          document.querySelectorAll('input[name="clothesGroup"]').forEach(groupRadio => {
            if (groupRadio !== this) {
              groupRadio.checked = false;
              groupRadio.parentElement.classList.remove('active');  // Remove active class from labels
            }
          });
        });
      });

      // Add event listeners for upperBody and lowerBody radio buttons
      document.querySelectorAll('input[name="upperBody"], input[name="lowerBody"]').forEach(input => {
        input.addEventListener('change', function () {
          // Remove active class from all clothes options
