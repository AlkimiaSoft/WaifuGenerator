          // Disable and uncheck upper and lower body radio buttons
          document.querySelectorAll('input[name="upperBody"], input[name="lowerBody"]').forEach(radio => {
            radio.disabled = true;
            radio.checked = false;
            radio.parentElement.classList.remove('active');  // Remove active class from labels
          });

          // Enable the selected group's clothes radio buttons
          const selectedGroup = this.value;
          document.querySelectorAll(`input[name="clothes"][id*=${selectedGroup}]`).forEach(radio => {
            radio.disabled = false;
          });

          if (selectedGroup === 'onePiece') {
